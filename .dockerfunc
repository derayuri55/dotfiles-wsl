#!/bin/bash

deno () {
  docker run \
    --interactive \
    --tty \
    --rm \
    --volume $PWD:/app \
    --volume $HOME/.deno:/deno-dir \
    --workdir /app \
    hayd/alpine-deno:1.4.0 \
    "$@"
  }

go() {
  docker run \
    --interactive \
    --tty \
    --rm \
    --volume $PWD:/go \
    --env GOPATH= \
    golang:latest \
    go "$@"
  }

aws() {
  docker run -it --rm \
    -v "${HOME}/.aws:/root/.aws" \
    --log-driver none \
    --name aws \
    amazon/aws-cli "$@"
  }

